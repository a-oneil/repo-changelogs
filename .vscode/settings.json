{
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.formatting.provider": "none",
    "flake8.args": [
        "--max-line-length=256",
        "--ignore=E501, E101, W191, W503, F841"
    ],
    "flake8.interpreter": [
        "venv/bin/python"
    ],
    "flake8.path": [
        "venv/bin/flake8"
    ],
    "jupyter.notebookFileRoot": "${workspaceFolder}"
}